// Definindo a fonte de dados (banco de dados)
datasource db {
  provider = "mysql"  // Pode ser "postgresql" ou "sqlite" também, dependendo do seu banco
  url      = env("DATABASE_URL")  // Usando a variável do arquivo .env
}

// Definindo o gerador Prisma Client
generator client {
  provider = "prisma-client-js"
}

// Definições das models (User, Store, Product)

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  password  String
  store     Store?   // Relacionamento 1-1 com Store, mas sem os parâmetros @relation
  storeId   Int?     // A chave estrangeira será armazenada aqui
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Store {
  id        Int      @id @default(autoincrement())
  name      String
  userId    Int      @unique   // Chave única para o usuário
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)  // Relacionamento explícito aqui
  products  Product[] // 1-N: uma loja tem vários produtos
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Decimal  @db.Decimal(10,2)
  storeId   Int
  store     Store    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
